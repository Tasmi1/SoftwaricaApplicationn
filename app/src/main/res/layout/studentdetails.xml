<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >


    <ImageView
        android:id="@+id/imggender"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/aa"
        tools:layout_editor_absoluteX="41dp" />

    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/imggender"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtage"
        android:layout_width="52dp"
        android:layout_height="16dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="24dp"
        android:text="Age"
        app:layout_constraintStart_toEndOf="@+id/imggender"
        app:layout_constraintTop_toBottomOf="@+id/txtname" />

    <TextView
        android:id="@+id/txtaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:text="Address"
        app:layout_constraintStart_toEndOf="@+id/imggender"
        app:layout_constraintTop_toBottomOf="@+id/txtage" />

    <ImageButton
        android:id="@+id/imgbtndelete"
        android:layout_width="85dp"
        android:layout_height="86dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txtage"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ddd" />

    <TextView
        android:id="@+id/txtgender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Gender"
        app:layout_constraintTop_toBottomOf="@+id/imgbtndelete"
        tools:layout_editor_absoluteX="320dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
